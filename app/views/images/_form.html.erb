<div class="row">
  <fieldset class="col-md-6 col-md-offset-3 text-center">
    <legend>Upload image</legend>

    <%= form_for @image, :url => @image.id.nil? ? images_path : image_path, :html => { :multipart => true } do |f| %>
      <% if @image.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@image.errors.count, "error") %> erros ao tentar salvar o arquivo:</h2>

          <ul>
          <% @image.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name, class: 'col-md-12 text-left' %><br>
        <%= f.text_field :name, class: "form-control" %>
      </div>

        <div class="form-group">
          <img id="preview_image" src="<%= @image.file.url :big if @image.id %>">
          <%= f.label :file, class: 'col-md-12 text-left' %>
          <%= f.file_field :file %>
          Tamanho ideal da imagem: 800x400
        </div>
      <div class="actions">
        <%= f.submit :class => 'btn btn-success' %>
      </div>
    <% end %>
  </fieldset>
</div>