<p id="notice"><%= notice %></p>

<h1>Listing Images</h1>

<div class="row image-box">
  <% @images.each do |image| %>
    <div class="col-md-3">
      <div class="image-thumb"><%= image_tag image.file.url :medium, style: "max-width:100%" %></div>
      <h3><%= image.name %></h3>
      <hr/>

      <ul>
        <li><%= link_to (fa_icon 'eye'), image, title: 'Visualizar' %></li>
        <li><%= link_to (fa_icon 'pencil'), edit_image_path(image), title: 'Editar' %></li>
        <li><%= link_to (fa_icon 'times'), image, method: :delete, data: { confirm: 'VocÃª tem certeza que deseja excluir essa imagem?' }, title: 'Excluir' %></li>
      </ul>
    </div>
  <% end %>
</div>
